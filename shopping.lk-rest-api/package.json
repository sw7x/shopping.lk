		"test:coverage": "cross-env NODE_ENV=testing jest --coverage=true --coverageDirectory=coverage",
		"test:debug": "cross-env NODE_ENV=testing jest --debug --runInBand --verbose --detectOpenHandles",
		"dev": "cross-env PORT=4999 NODE_ENV=development DEBUG=true nodemon",
		"clean": "rimraf dist",
		"clean:all": "rimraf dist node_modules",
		"lint:check": "eslint",
		"lint:fix": "eslint --fix",
		"format:check": "prettier . --check --ignore-unknown || true && stylelint \"public/**/*.{css,scss}\"",
		"format:fix": "prettier . --write --ignore-unknown || true && stylelint \"public/**/*.{css,scss}\" --fix"
	},
